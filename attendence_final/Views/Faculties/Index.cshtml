@model IEnumerable<attendence_final.Models.Faculty>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Faculties - Admin View</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.dept.Dept_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Faculty_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.dept.Dept_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Faculty_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Fact_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Fact_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Fact_Id })
        </td>
    </tr>
}

</table>
